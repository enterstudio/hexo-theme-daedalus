#profile
    top: 0
    left: 30px
    transition: top ease 0.2s
    z-index: 999
    margin-bottom: 10px
    [data-toggle-menu]
        width: 100%
        margin-top: 54px;

.on
    .profile-block.name:before
        transform: rotate(0)

.profile-block
    padding: 15px 20px
    width: 100%;
    box-sizing: border-box;
    margin-bottom: 4px
    background-color: white
    transition: 0.2s linear
    position: relative
    box-shadow: 3px 3px 3px rgba(0,0,0,0.09)
    opacity: 0
    top: -20px
    &:last-child
        border-bottom: none
    @media mq-tablet
        opacity: 1
        top: 0
    @media mq-normal
        display: block;
        float: right;
        box-sizing: border-box;
        clear: both;
    &.name
        font-size: 1.6em
        text-transform: uppercase
        letter-spacing: -1px;
        font-family: Helvetica Neue
        padding: 0
        line-height: 50px
        box-shadow: none
        &:before
            transition-duration: 0.3s
            font-family: FontAwesome
            content: "\f078"
            transform: rotate(-90deg)
            position: absolute
            display: inline-block;
            left: -30px
            text-align: center
            width: 30px
            font-size: 0.8em
            color: color-accent
            @media mq-tablet
                display: none
        .lastname
            font-weight: bold
        @media mq-tablet
            text-align: center
            font-size: 1.6em
    &.avatar
        padding: 0
        height: 170px
        background-size: cover
        background-position: center center
    &.base-info
        text-align: center
        #avatar
            display: block
            margin: 10px auto 20px
            width: profile-avatar-size
            height: profile-avatar-size
        #name, #title, #location
            display: block
            text-align: center
        #name
            font-size: 20px
            font-weight: 600
        #location
            font-size: font-size - 2
            margin-top: 5px
            color: color-default + #444
            .fa
                margin-right: 5px
    &.social-links
        & > table
            width: 100%
            td
                text-align: center
                font-size: font-size + 10px
                a
                    position: relative
                    transition: 0.2s ease
            
    @media mq-tablet
        display: block

#profile
    & > .profile-block:first-child
        display: block
        opacity: 1
        position: fixed;
        width: inherit;
        max-width: inherit;
        z-index: 1000
        top: 0
            
#profile.on 
    .profile-block
        opacity: 1
        top: 0
        z-index: 900
        &:first-of-type
            display: block