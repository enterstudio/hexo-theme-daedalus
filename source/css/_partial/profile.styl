#profile
	top: 0
	left: 30px
	transition: top ease 0.2s
	height: 0
	z-index: 999
	margin-bottom: 10px
	@media mq-tablet
		height: auto
	&.on
		height: auto
	[data-toggle-menu]
		visibility: hidden
		width: 100%
		margin-top: 54px;
		@media mq-tablet
			visibility: visible
	&.on [data-toggle-menu]
		visibility: visible

.on
	.profile-block.name:before
		transform: rotate(0)

.profile-block
	padding: 15px 20px
	width: 100%;
	box-sizing: border-box;
	margin-bottom: 4px
	background-color: white
	border: 1px solid #eee
	transition: 0.2s linear
	position: relative
	opacity: 0
	top: -20px
	@media mq-tablet
		border: none
		background-color: #eee
		color: color-default
		opacity: 1
		top: 0
	@media mq-normal
		display: block;
		float: right;
		box-sizing: border-box;
		clear: both;
	&.name
		font-size: 3em !important
		font-weight: normal
		background: transparent
		color: color-default
		padding: 0
		border: none
		line-height: 50px
		box-shadow: none
		&:before
			transition-duration: 0.3s
			font-family: FontAwesome
			content: "\f078"
			transform: rotate(-90deg)
			position: absolute
			display: inline-block;
			left: -30px
			text-align: center
			width: 30px
			font-size: 0.8em
			color: color-accent
			@media mq-tablet
				display: none
		.lastname
			font-weight: bold
		@media mq-tablet
			background: color-accent
			color: white
			text-align: center
			font-size: 1.6em
	&.avatar
		padding: 0
		height: 170px
		background-size: cover
		background-position: center center
		border: none
	&.base-info
		text-align: center
		#avatar
			display: block
			margin: 10px auto 20px
			width: profile-avatar-size
			height: profile-avatar-size
		#name, #title, #location
			display: block
			text-align: center
		#name
			font-size: 20px
			font-weight: 600
		#location
			font-size: font-size - 2
			margin-top: 5px
			color: color-default + #444
			.fa
				margin-right: 5px
	&.social-links
		& > table
			width: 100%
			td
				text-align: center
				font-size: font-size + 10px
				a
					position: relative
					transition: 0.2s ease
			
	@media mq-tablet
		display: block

#profile
	& > .profile-block:first-child
		display: block
		opacity: 1
		position: fixed;
		width: inherit;
		max-width: inherit;
		z-index: 1000
		top: 0
			
#profile.on 
	.profile-block
		opacity: 1
		top: 0
		z-index: 900
		&:first-of-type
			display: block
