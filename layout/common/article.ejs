<article id="<%= post.layout %>-<%= post.slug %>" class="article article-type-<%= post.layout %>" itemscope itemprop="blogPost">
	<%- partial('post/gallery') %>
	<% if (post.link || post.title) { %>
		<header class="article-header">
			<% if (index) { %>
				<a
				<% if (post.link) { %>
				href="<%- url_for(post.path) %>" itemprop="url"
				<% } else if (post.title) { %>
				href="<%- url_for(post.link) %>" target="_blank" itemprop="url"
				<% } %>
				>
					<% if (post.banner) { %>
					<img src="<%- post.banner %>" class="article-banner" />
					<% } %>
					<h1><%- post.title %></h1>
				</a>
			<% } else { %>
				<img src="<%- post.banner %>" class="article-banner" />
				<h1><%- post.title %></h1>
			<% } %>
			<div class="article-meta">
				<%- partial('post/date', { class_name: 'article-date', date_format: null }) %>
				<%- partial('post/category') %>
				<%- partial('post/tag') %>
			</div>
		</header>
	<% } %>
	<div class="article-entry" itemprop="articleBody">
	<% if (index) { %>
		<p><%- excerpt(post) %></p>
	<% } else { %>
		<% if (!index && post.toc) { %>
			<div id="toc" class="toc-article">
			<strong class="toc-title"><%= __('article.catalogue') %></strong>
				<%- toc(post.content) %>
			</div>
		<% } %>
		<%- post.content %>
	<% } %>
	<footer class="article-footer">
		<% if (index) { %>
			<a class="article-more-link" href="<%- url_for(post.path) %>#more"><%= __('article.more') %></a>
		<% } else { %> <% } %>
		<%- partial('share/index', { post: post }) %>
		<%- partial('comment/counter', { post: post }) %>
	</footer>
	</div>
	<% if (!index) { %>
		<%- partial('post/nav') %>
	<% } %>
</article>

<% if (!index) { %>
	<%- partial('comment/index') %>
<% } %>
